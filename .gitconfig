[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = Paulo Romeira
	email = paulo@pauloromeira.com
[diff]
	tool = vimdiff
[alias]
	co = checkout
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	br = branch
	ci = commit
	pth = log --oneline --graph --decorate
[core]
    editor = vim
[color]
    status = always
